# ============================================
# InTracker Environment Configuration Example
# ============================================
# Copy this file to .env and update with your values
# cp .env.example .env

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://intracker:intracker_dev@localhost:5433/intracker

# ============================================
# JWT Authentication
# ============================================
# Generate secure secrets for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=dev-secret-key-min-32-chars-long-for-testing-only
JWT_REFRESH_SECRET=dev-refresh-secret-min-32-chars-long-for-testing-only
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# GitHub Integration
# ============================================
# Get your token from: https://github.com/settings/tokens
# Required scopes: repo (full repository access)
GITHUB_TOKEN=

# ============================================
# MCP Server Configuration
# ============================================
MCP_API_KEY=

# ============================================
# Server Configuration
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=*

# ============================================
# PostgreSQL (Docker)
# ============================================
POSTGRES_DB=intracker
POSTGRES_USER=intracker
POSTGRES_PASSWORD=intracker_dev
